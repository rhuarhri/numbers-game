<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:background="@color/colorPrimaryLight">

    <Button
            android:text="play"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/playBTN"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="36sp"
            android:background="@color/colorPrimaryDark" android:textColor="@color/colorSecondaryText"/>
    <TextView
            android:text="number game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/playBTN" app:layout_constraintStart_toStartOf="@+id/playBTN"
            app:layout_constraintEnd_toEndOf="@+id/playBTN" android:layout_marginBottom="24dp" android:textSize="36sp"
            android:textColor="@color/colorPrimaryText"/>
</android.support.constraint.ConstraintLayout>